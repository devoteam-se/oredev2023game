{
  "compilerOptions": {
    "lib": ["ESNext", "dom", "dom.iterable"],
    "outDir": "dist",
    "target": "ESNext",
    "strict": true,
    "noErrorTruncation": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "composite": false,
    "baseUrl": "."
  },
  "exclude": ["node_modules"]
}
